<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cotizacion.cotizacion_step3"
    android:orientation="vertical"
    android:background="@color/colorbackground">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_logogeneral"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:id="@+id/home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/app_icon_home"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground">
                </ImageView>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INFORMACION ADICIONAL"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16dp"
        android:textColor="@color/colorPrimary"
        android:padding="15dp"
        android:textAlignment="center"
        android:background="@android:color/white"
        android:layout_below="@+id/appbarlayout">
    </TextView>
    <com.badoualy.stepperindicator.StepperIndicator
        android:id="@+id/stepper_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:stpi_labels="@array/stepLabels"
        android:layout_below="@id/textTitle"/>
    <ScrollView
        android:id="@+id/scrooll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/stepper_indicator">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="2dp">
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Información General"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="12dp"
                        android:layout_margin="2dp"
                        android:drawableStart="@drawable/login_icon_person"
                        android:drawablePadding="5dp"
                        android:padding="2dp"
                        android:gravity="center_vertical">
                    </TextView>
                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/app_icon_arrow_up"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/lny_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombres"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="12dp">
                </TextView>
                <TextView
                    android:id="@+id/textNombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="José Emerson"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="14dp"
                    android:padding="3dp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp">
                </TextView>
                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="jose.arroyo@bismarck.com.pe"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="14dp"
                    android:padding="3dp">
                </TextView>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="false"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Factura"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="12dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:gravity="center_vertical">
                    </TextView>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        style="@style/BrandedSwitch.control">
                    </androidx.appcompat.widget.SwitchCompat>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/lny_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:padding="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_empresa"
                        android:layout_marginTop="2dp"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:text="Agregar"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="12dp"
                        android:background="@drawable/button_rectangle_red"
                        android:padding="5dp"
                        android:clickable="true"
                        android:foreground="?android:selectableItemBackground">
                    </androidx.appcompat.widget.AppCompatButton>
                </LinearLayout>
                <TextView
                    android:id="@+id/textMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No tiene empresas asociadas"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="12dp"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center">
                </TextView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp">
                <Button
                    android:id="@+id/btnContinue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Siguiente"
                    android:elevation="5dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_rectangle_red"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:foreground="?android:selectableItemBackground">
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>