<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cotizacion.cotizacion_step4"
    android:orientation="vertical"
    android:background="@color/colorbackground">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_logogeneral"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/app_icon_home"
                        android:layout_marginEnd="10dp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground">
                    </ImageView>
                </LinearLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROCESAR"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="16dp"
        android:textColor="@color/colorPrimary"
        android:padding="15dp"
        android:textAlignment="center"
        android:background="@android:color/white">
    </TextView>
    <com.badoualy.stepperindicator.StepperIndicator
        android:id="@+id/stepper_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:stpi_labels="@array/stepLabels"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/colorbackground">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_gravity="center_horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="2dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:text="En Obra"
                                android:fontFamily="@font/montserrat_regular"
                                android:textSize="12dp"
                                android:textAlignment="textEnd"
                                android:padding="2dp"
                                android:layout_gravity="center_horizontal|center_vertical">
                            </TextView>
                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch1"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                style="@style/BrandedSwitch.control">
                            </androidx.appcompat.widget.SwitchCompat>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/lny_lugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12dp"
                        android:padding="2dp"
                        android:text="Ubicación actual"
                        android:visibility="gone">
                    </TextView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_rectangle"
                        android:visibility="gone">
                        <EditText
                            android:id="@+id/edt_direccion"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="Dirección"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="@dimen/font_size_registrarse"
                            android:inputType="textImeMultiLine"
                            android:scrollHorizontally="true"
                            android:padding="2dp"
                            android:backgroundTint="@android:color/white"
                            android:drawableLeft="@drawable/app_icon_place"
                            android:drawablePadding="5dp"
                            android:clickable="true"
                            android:foreground="?android:selectableItemBackground"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Seleccione o agregue una dirección de despacho"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/montserrat_medium"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12dp"
                                android:layout_margin="2dp">
                            </TextView>
                            <ImageView
                                android:id="@+id/btndireccion"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/app_icon_showmore"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="2dp"
                                android:clickable="true"
                                android:foreground="?android:selectableItemBackground">
                            </ImageView>
                        </LinearLayout>
                        <ProgressBar
                            android:id="@+id/progress_bar2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:visibility="gone">
                        </ProgressBar>
                        <TextView
                            android:id="@+id/textdireccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No cuenta con direccion(es) asociada(s)..."
                            android:layout_gravity="center_horizontal"
                            android:visibility="gone"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="12dp"
                            android:textColor="@color/colorAccent"
                            android:textAlignment="center">
                        </TextView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_direccion"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lny_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="5dp">
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone">
                    </ProgressBar>
                    <TextView
                        android:id="@+id/textMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No hay elementos"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="12dp"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center">
                    </TextView>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@drawable/cotizacion_cart_border_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Total"
                android:padding="2dp"
                android:fontFamily="@font/montserrat_bold"
                android:textStyle="bold"
                android:textSize="18dp">
            </TextView>
            <TextView
                android:id="@+id/textTotal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textAlignment="textEnd"
                android:padding="2dp"
                android:fontFamily="@font/montserrat_bold"
                android:textStyle="bold"
                android:textSize="18dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@color/colorPrimary">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Procesar"
            android:elevation="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="12dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_rectangle_red"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
        </androidx.appcompat.widget.AppCompatButton>
    </RelativeLayout>
</LinearLayout>