<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background">
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/registrarse_title_background"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Dirección de Despacho"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/montserrat_bold"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <EditText
            android:id="@+id/edt_direccion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:hint="Dirección"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12dp"
            android:inputType="textCapCharacters|textMultiLine"
            android:scrollHorizontally="false"
            android:background="@drawable/edittext_rectangle"
            android:gravity="top"
            android:scrollbars="vertical|horizontal"
            android:maxLength="150"/>
        <EditText
            android:id="@+id/edt_referencia"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:hint="Referencia"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12dp"
            android:inputType="textCapCharacters|textMultiLine"
            android:scrollHorizontally="false"
            android:background="@drawable/edittext_rectangle"
            android:gravity="top"
            android:scrollbars="vertical|horizontal"
            android:maxLength="60"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/edt_departamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="Departamento"
            android:drawableEnd="@drawable/app_icon_arrow_down"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12dp"
            android:inputType="textCapCharacters|textMultiLine"
            android:scrollHorizontally="false"
            android:background="@drawable/edittext_rectangle"
            android:gravity="top"
            android:scrollbars="vertical|horizontal"
            android:maxLength="60"
            android:layout_marginTop="10dp"
            android:focusable="false"/>
        <EditText
            android:id="@+id/edt_provincia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="Provincia"
            android:drawableEnd="@drawable/app_icon_arrow_down"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12dp"
            android:inputType="textCapCharacters|textMultiLine"
            android:scrollHorizontally="false"
            android:background="@drawable/edittext_rectangle"
            android:gravity="top"
            android:scrollbars="vertical|horizontal"
            android:maxLength="60"
            android:layout_marginTop="10dp"
            android:focusable="false"/>
        <EditText
            android:id="@+id/edt_distrito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="Distrito"
            android:drawableEnd="@drawable/app_icon_arrow_down"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12dp"
            android:inputType="textCapCharacters|textMultiLine"
            android:scrollHorizontally="false"
            android:background="@drawable/edittext_rectangle"
            android:gravity="top"
            android:scrollbars="vertical|horizontal"
            android:maxLength="60"
            android:layout_marginTop="10dp"
            android:focusable="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rectangle_red"
            android:text="CANCELAR"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rectangle_blue"
            android:text="ACEPTAR"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
</LinearLayout>
