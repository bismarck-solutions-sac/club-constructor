<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".maps.locales_detail"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@drawable/border_background">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="4dp">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locales_icon_place"
            android:layout_gravity="center_vertical"
            android:padding="5dp">
        </ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:fontFamily="@font/montserrat_bold">
            </TextView>
            <TextView
                android:id="@+id/address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:fontFamily="@font/montserrat_regular">
            </TextView>
        </LinearLayout>
        <TextView
            android:id="@+id/distance"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:hint="0 \nkm"
            android:fontFamily="@font/montserrat_regular"
            android:background="@drawable/shape_triangulo_blue"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="10dp"
            android:padding="2dp"
            android:textAlignment="textEnd"
            android:layout_gravity="center_vertical">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locales_icon_responsable"
            android:layout_gravity="center_vertical"
            android:padding="5dp">
        </ImageView>
        <TextView
            android:id="@+id/responsable"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Responsable"
            android:fontFamily="@font/montserrat_regular"
            android:layout_gravity="center_vertical">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locales_icon_phone"
            android:layout_gravity="center_vertical"
            android:padding="5dp">
        </ImageView>
        <TextView
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:fontFamily="@font/montserrat_regular"
            android:layout_gravity="center_vertical">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="CÃ³mo llegar:"
            android:fontFamily="@font/montserrat_bold"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textAlignment="textEnd">
        </TextView>
        <Button
            android:id="@+id/btn_llegar"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="10dp"
            android:drawableBottom="@drawable/locales_icon_googlemaps"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp">
        </Button>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="5dp">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </fragment>
    </LinearLayout>
</LinearLayout>
