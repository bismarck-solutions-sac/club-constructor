<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorbackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">
        <TextView
            android:id="@+id/textArea"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/montserrat_bold"
            android:hint="Area 0.00 m2"
            android:textSize="14dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textAlignment="center"
            android:background="@drawable/main_border_menu_colorprimary"
            android:gravity="center_vertical">
        </TextView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="1dp"
            app:cardUseCompatPadding="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usted necesita"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="14dp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textTotal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:padding="5dp"
                        android:textAlignment="textEnd">
                    </TextView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="millar(es) de"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp"
                        android:padding="5dp"
                        android:textAlignment="textStart">
                    </TextView>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        android:background="@drawable/bricks_result_icon_background">
                        <ImageView
                            android:id="@+id/imageBrick"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:padding="5dp"
                            android:src="@drawable/app_icon_brick">
                        </ImageView>
                        <TextView
                            android:id="@+id/textBrick"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:hint="PANDERETA"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12dp"
                            android:padding="5dp"
                            android:textAlignment="textStart"
                            android:layout_gravity="center">
                        </TextView>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/lny_adicionales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adicionales"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="16dp"
                        android:padding="2dp"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">
                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Medidas aproximadas)"
                        android:fontFamily="@font/montserrat_medium"
                        android:textSize="12dp"
                        android:padding="2dp"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lny_cemento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cemento parcial"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="14dp"
                        android:padding="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">
                    </TextView>
                    <TextView
                        android:id="@+id/textCemento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.000 m2"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14dp"
                        android:padding="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lny_arena"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arena parcial de agregado"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="14dp"
                        android:padding="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">
                    </TextView>
                    <TextView
                        android:id="@+id/textArena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.000 m2"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14dp"
                        android:padding="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lny_piedra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Piedra chancada parcial"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="14dp"
                        android:padding="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">
                    </TextView>
                    <TextView
                        android:id="@+id/textPiedra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="0.000 m2"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14dp"
                        android:padding="2dp"
                        android:textColor="@color/colorPrimary"
                        android:textAlignment="center"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>
