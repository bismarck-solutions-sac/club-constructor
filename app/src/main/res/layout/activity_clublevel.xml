<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".club.clublevel"
    android:background="@drawable/login_background"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/login_logogeneral"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:id="@+id/home"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/app_icon_home"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp">
                </ImageView>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cimglevel"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:src="@drawable/app_icon_puntos"
            android:layout_gravity="center_horizontal"
            android:padding="5dp">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Nuestra categoria"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="12dp">
        </TextView>
        <TextView
            android:id="@+id/textLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="BRONCE"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="22dp">
        </TextView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Has acumulado"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="textEnd">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textpuntos"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="24dp"
                        android:textColor="@color/colorPrimary"
                        android:padding="2dp"
                        android:textAlignment="textEnd"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pts"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="18dp"
                        android:textColor="@color/colorAccent"
                        android:padding="2dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Siguiente nivel"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14dp"
                    android:textColor="@color/colorNextLevel"
                    android:textAlignment="textEnd">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textpuntosnext"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="24dp"
                        android:textColor="@color/colorNextLevel"
                        android:padding="2dp"
                        android:textAlignment="textEnd"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pts"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="18dp"
                        android:textColor="@color/colorNextLevel"
                        android:padding="2dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:text="Movimientos"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/main_border_menu_colorprimary">
        </TextView>
        <TextView
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hay movimientos"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="12dp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:padding="10dp">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="5dp"
            android:padding="2dp">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>