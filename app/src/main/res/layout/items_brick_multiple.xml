<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        android:background="@color/colorbackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_margin="10dp">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkSelect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:buttonTint="@color/colorAccent" />
            <ImageView
                android:id="@+id/imageBrick"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/app_icon_brick"
                android:layout_gravity="center_vertical">
            </ImageView>
            <TextView
                android:id="@+id/textDescripcion"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                android:hint="DescripciÃ³n"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/imageFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/app_icon_info"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">
            </ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Cantidad"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="8dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="top">
                </TextView>
                <EditText
                    android:id="@+id/editCantidad"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="12dp"
                    android:hint="0"
                    android:background="@drawable/bricks_result_icon_background"
                    android:enabled="false">
                </EditText>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Millares"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="8dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_gravity="bottom">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
